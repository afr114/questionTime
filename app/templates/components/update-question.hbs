{{#if updateQuestionInfo}}

      <form>
        <div class="row">
          <label for="title">Title</label>
          {{input class="u-full-width" value=title id="title"}}
        </div>

        <div class="row">
          <label for="note">Note</label>
          {{textarea class="u-full-width" rows="2" value=note id="note"}}
        </div>

        <div class="row">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <button {{action 'update' question}}>Update</button>

      </form>
       <button {{action 'closeUpdateQuestionForm'}}>Nah, Forget Updating</button>

{{else}}
        <button {{action 'showUpdateQuestionForm'}}>Update Question</button>
{{/if}}
