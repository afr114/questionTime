{{#if updateAnswerForm}}

    <form>
        <div class="pure-control-group">
          <label for="content">Answer</label>
          {{textarea class="pure-input-1-3" rows="2" value=content id="content"}}
        </div>

        <div class="pure-control-group">
          <label for="username">Name</label>
          {{input class="pure-input-1-3" value=username id="username"}}
        </div>

        <div class="form-group">
        <button {{action 'updateAnswer' answer}}>Submit</button>
        </div>

      </form>
       <button {{action 'closeUpdateAnswerForm'}}>Nah, Forget Aswering</button>

{{else}}
        <button {{action 'showUpdateAnswerForm'}}>Update Answer</button>
{{/if}}
